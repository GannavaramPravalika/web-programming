 <div>
    <h3 style="color:aliceblue">ADD A NEW BOOK <a href="/shop/create" class="btn btn-success" role="button">NEW</a>
</div>
<div class="abc">    
{{# each products}}
    <div class="row"> 
        {{# each this}}
            <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src={{this.imagePath}} alt="..." class="img-responsive">
            <div class="caption">
                <h4>{{this.title}}</h4>
                <p class="description">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">Price:&#8377
 {{this.price}}</div>
                    <a href="/delete/{{this.id}}" class="btn btn-success pull-right" role="button">Delete</a>
                </div>
            </div>
        </div>
    </div>
        {{/each}}
      </div>  
{{/each}}
</div>